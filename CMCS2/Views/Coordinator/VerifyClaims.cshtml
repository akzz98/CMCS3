@model IEnumerable<CMCS2.Models.Claim>
@{
    ViewBag.Title = "Verify Claims";
}

<div class="d-flex flex-column justify-content-center align-items-center vh-100">
    <h2>Verify Claims</h2>

    <div class="table-container">
        @if (!Model.Any())
        {
            <div class="alert alert-warning" role="alert">
                Nothing here yet
            </div>
        }
        else
        {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Claim ID</th>
                    <th>Lecturer Name</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Notes</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.ClaimId</td>
                        @* <td>@claim.LecturerName</td>  <!-- Assuming you have Lecturer details --> *@
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate</td>
                        <td>@claim.Notes</td>
                        <td>
                            <form method="post" action="@Url.Action("ApproveClaim", "Coordinator")">
                                <input type="hidden" name="claimId" value="@claim.ClaimId" />
                                <button type="submit" class="btn btn-success">Approve</button>
                            </form>
                            <form method="post" action="@Url.Action("RejectClaim", "Coordinator")">
                                <input type="hidden" name="claimId" value="@claim.ClaimId" />
                                <button type="submit" class="btn btn-danger">Reject</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        }
    </div>

    <a href="@Url.Action("Index", "Coordinator")" class="btn btn-primary mt-4">Back</a>
</div>

<style>
    style >
    .table-container {
        margin-top: 20px;
        max-width: 800px;
        width: 100%;
        max-height: 500px; 
        overflow-y: auto; 
    }

    .table thead th {
        position: sticky; 
        top: 0; 
        z-index: 2;
    }

    .table {
        width: 100%;
    }
</style>
