@model IEnumerable<CMCS2.Models.Claim>

@{
    ViewBag.Title = "Unapproved Claims";
}

<div class="d-flex flex-column justify-content-center align-items-center vh-100">
    <h1>Unapproved Claims</h1>

    <div class="table-container">
        @if (!Model.Any())
        {
            <div class="alert alert-warning" role="alert">
                Nothing here yet
            </div>
        }
        else
        {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>                    
                    <th>Claim ID</th>
                    <th>Lecturer Name</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Notes</th>
                    <th>Date Submitted</th>
                    <th>Supporting Document</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.ClaimId</td>
                        <td>@claim.LecturerFullName</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate</td>
                        <td>@claim.Notes</td>
                        <td>@claim.DateSubmitted</td>
                        <td>
                            @if (!string.IsNullOrEmpty(claim.DocumentPath))
                            {
                                <a href="@Url.Content(claim.DocumentPath)" target="_blank">View Document</a>
                            }
                            else
                            {
                                <span>No document uploaded</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("ApproveClaim", "Coordinator", new { claimId = claim.ClaimId })" class="btn btn-success">Verify</a>

                            <!-- Trigger modal for rejecting a claim -->
                            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#rejectModal_@claim.ClaimId">
                                Reject
                            </button>

                            <!-- Rejection reason-->
                            <div class="modal fade" id="rejectModal_@claim.ClaimId" tabindex="-1" role="dialog" aria-labelledby="rejectModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="rejectModalLabel">Reject Claim</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="@Url.Action("RejectClaim", "Coordinator")" method="post">
                                                <input type="hidden" name="claimId" value="@claim.ClaimId" />
                                                <div class="form-group">
                                                    <label for="rejectionReason">Reason for Rejection</label>
                                                    <textarea name="rejectionReason" class="form-control" required></textarea>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-danger">Submit Rejection</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        }
    </div>

    <a href="@Url.Action("Index", "Coordinator")" class="btn btn-primary mt-4">Back</a>
</div>

<style>
    style >
    .table-container {
        margin-top: 20px;
        max-width: 800px;
        width: 100%;
        max-height: 500px;
        overflow-y: auto;
    }

    .table thead th {
        position: sticky;
        top: 0;
        z-index: 2;
    }

    .table {
        width: 100%;
    }
</style>
